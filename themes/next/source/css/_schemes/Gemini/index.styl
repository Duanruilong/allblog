// Rewrite _layout.styl
// =================================================
// For post blocks.
.content-wrap {
  padding: initial;
  background: initial;
  box-shadow: initial;
  border-radius: initial;
}

.post-block {
  margin-bottom: 12px;

  background: white;
  // padding: $content-desktop-padding;
  padding: 20px;
  box-shadow: $box-shadow-inner;
  border-radius: $border-radius-inner;
  position: relative;

  &::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 10px;
    bottom: 0;
    left: 0;
    // background-color: #000;
    background-color: #24e1d2;
    visibility: hidden;
    transform: scaleX(0);
    the-transition();
  }

  &:hover::before {
    visibility: visible;
    transform: scaleX(1);
  }
}

.posts-expand {
  padding-top: initial;
}

.post-eof {
  hide();
}

// For footer top alignment.
.main {
  padding-bottom: initial;
}
.footer {
  bottom: auto;
}
